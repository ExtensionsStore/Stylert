<layout>

    <default>
        <reference name="head">
            <action method="addItem"><type>skin_js</type><name>aydus/stylert/stylert.js</name></action>
            <action method="addItem"><type>skin_css</type><name>aydus/stylert/stylert.css</name></action>
        </reference>
        
        <reference name="before_body_end">
            <block type="aydus_stylert/stylert" name="stylert" template="aydus/stylert/stylert.phtml" />
        </reference>
        
    </default>
    

</layout>